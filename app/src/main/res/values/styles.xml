<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!--Padding Section-->
    <style name="margin_8dp" parent="AppTheme">
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
    </style>

    <style name="margin_88dp" parent="AppTheme">
        <item name="android:layout_marginStart">@dimen/margin_88dp</item>
        <item name="android:layout_marginRight">@dimen/margin_88dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_88dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_88dp</item>
    </style>

    <!--Custom styles-->
    <style name="padding_16dp_and_margin_8dp" parent="AppTheme">
        <item name="android:paddingStart">@dimen/padding_16dp</item>
        <item name="android:paddingRight">@dimen/padding_16dp</item>
        <item name="android:paddingEnd">@dimen/padding_16dp</item>
        <item name="android:paddingLeft">@dimen/padding_16dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
    </style>

    <style name="user_login_edit_texts" parent="padding_16dp_and_margin_8dp">
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:paddingBottom">@dimen/padding_16dp</item>
        <item name="android:paddingTop">@dimen/padding_16dp</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="android:textSize">@dimen/edit_text_text_sizes</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
    </style>

    <style name="margin_8dp_left_padding_top" parent="AppTheme">
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:paddingTop">@dimen/padding_6dp</item>
    </style>

    <style name="ellipsize_and_max_lines" parent="AppTheme">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="custom_margin_8dp" parent="ellipsize_and_max_lines">
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="user_data_layout" parent="ellipsize_and_max_lines">
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>